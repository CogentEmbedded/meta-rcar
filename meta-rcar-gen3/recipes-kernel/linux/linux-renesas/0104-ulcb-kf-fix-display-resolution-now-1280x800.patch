From 066eb7b3a61525b8a8b16d74b87f79db53ea206d Mon Sep 17 00:00:00 2001
From: Andrey Gusakov <andrey.gusakov@cogentembedded.com>
Date: Fri, 30 Dec 2016 15:26:55 +0300
Subject: [PATCH 104/104] ulcb-kf: fix display resolution (now 1280x800)

also fix wrong routing on H3

Signed-off-by: Andrey Gusakov <andrey.gusakov@cogentembedded.com>
---
 arch/arm64/boot/dts/renesas/r8a7795-h3ulcb-kf.dts |   20 ++++++++++----------
 arch/arm64/boot/dts/renesas/r8a7796-m3ulcb-kf.dts |   18 +++++++++---------
 2 files changed, 19 insertions(+), 19 deletions(-)

diff --git a/arch/arm64/boot/dts/renesas/r8a7795-h3ulcb-kf.dts b/arch/arm64/boot/dts/renesas/r8a7795-h3ulcb-kf.dts
index 1828985..ccd3b03 100644
--- a/arch/arm64/boot/dts/renesas/r8a7795-h3ulcb-kf.dts
+++ b/arch/arm64/boot/dts/renesas/r8a7795-h3ulcb-kf.dts
@@ -439,16 +439,16 @@
 		height-mm = <158>;
 
 		panel-timing {
-			/* 1024x768 @60Hz */
+			/* 1280x800 @60Hz */
 			clock-frequency = <65000000>;
-			hactive = <1024>;
-			vactive = <768>;
-			hsync-len = <136>;
-			hfront-porch = <20>;
-			hback-porch = <160>;
-			vfront-porch = <3>;
-			vback-porch = <29>;
-			vsync-len = <6>;
+			hactive = <1280>;
+			vactive = <800>;
+			hsync-len = <40>;
+			hfront-porch = <80>;
+			hback-porch = <40>;
+			vfront-porch = <14>;
+			vback-porch = <14>;
+			vsync-len = <4>;
 		};
 
 		port {
@@ -537,7 +537,7 @@
 				remote-endpoint = <&rcar_dw_hdmi0_in>;
 			};
 		};
-		port@2 {
+		port@3 {
 			endpoint {
 				remote-endpoint = <&lvds_enc_in>;
 			};
diff --git a/arch/arm64/boot/dts/renesas/r8a7796-m3ulcb-kf.dts b/arch/arm64/boot/dts/renesas/r8a7796-m3ulcb-kf.dts
index a512ce9..7267088 100644
--- a/arch/arm64/boot/dts/renesas/r8a7796-m3ulcb-kf.dts
+++ b/arch/arm64/boot/dts/renesas/r8a7796-m3ulcb-kf.dts
@@ -429,16 +429,16 @@
 		height-mm = <158>;
 
 		panel-timing {
-			/* 1024x768 @60Hz */
+			/* 1280x800 @60Hz */
 			clock-frequency = <65000000>;
-			hactive = <1024>;
-			vactive = <768>;
-			hsync-len = <136>;
-			hfront-porch = <20>;
-			hback-porch = <160>;
-			vfront-porch = <3>;
-			vback-porch = <29>;
-			vsync-len = <6>;
+			hactive = <1280>;
+			vactive = <800>;
+			hsync-len = <40>;
+			hfront-porch = <80>;
+			hback-porch = <40>;
+			vfront-porch = <14>;
+			vback-porch = <14>;
+			vsync-len = <4>;
 		};
 
 		port {
