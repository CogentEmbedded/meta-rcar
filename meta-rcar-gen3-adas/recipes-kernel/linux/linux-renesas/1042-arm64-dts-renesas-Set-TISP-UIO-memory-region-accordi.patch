From: Andrey Dolnikov <andrey.dolnikov@cogentembedded.com>
Date: Fri, 23 Oct 2020 14:04:37 +0300
Subject: [PATCH] arm64: dts: renesas: Set TISP UIO memory region according to
 datasheet

---
 arch/arm64/boot/dts/renesas/r8a77970.dtsi | 4 ++--
 arch/arm64/boot/dts/renesas/r8a77980.dtsi | 8 ++++----
 2 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/arch/arm64/boot/dts/renesas/r8a77970.dtsi b/arch/arm64/boot/dts/renesas/r8a77970.dtsi
index 5648876c5395..a6963deed8e0 100644
--- a/arch/arm64/boot/dts/renesas/r8a77970.dtsi
+++ b/arch/arm64/boot/dts/renesas/r8a77970.dtsi
@@ -1150,7 +1150,7 @@
 
 		tisp0: tisp_00 {
 			compatible = "generic-uio";
-			reg = <0 0xfed00000 0 0x10000>;
+			reg = <0 0xfed00000 0 0x20000>;
 			interrupts = <GIC_SPI 25 IRQ_TYPE_LEVEL_HIGH>;
 			clocks = <&cpg CPG_MOD 817>;
 			power-domains = <&sysc R8A77970_PD_ALWAYS_ON>;
@@ -1159,7 +1159,7 @@
 
 		cisp0: cisp_00 {
 			compatible = "generic-uio";
-			reg = <0 0xfec00000 0 0x20000>;
+			reg = <0 0xfec00000 0 0x100000>;
 			interrupts = <GIC_SPI 26 IRQ_TYPE_LEVEL_HIGH>;
 			clocks = <&cpg CPG_MOD 817>;
 			power-domains = <&sysc R8A77970_PD_ALWAYS_ON>;
diff --git a/arch/arm64/boot/dts/renesas/r8a77980.dtsi b/arch/arm64/boot/dts/renesas/r8a77980.dtsi
index 1ddf16166955..e9494b89f8c4 100644
--- a/arch/arm64/boot/dts/renesas/r8a77980.dtsi
+++ b/arch/arm64/boot/dts/renesas/r8a77980.dtsi
@@ -1663,7 +1663,7 @@
 
 		tisp0: tisp_00 {
 			compatible = "generic-uio";
-			reg = <0 0xfed00000 0 0x10000>;
+			reg = <0 0xfed00000 0 0x20000>;
 			interrupts = <GIC_SPI 25 IRQ_TYPE_LEVEL_HIGH>;
 			clocks = <&cpg CPG_MOD 817>;
 			resets = <&cpg 817>;
@@ -1673,7 +1673,7 @@
 
 		cisp0: cisp_00 {
 			compatible = "generic-uio";
-			reg = <0 0xfec00000 0 0x20000>;
+			reg = <0 0xfec00000 0 0x100000>;
 			interrupts = <GIC_SPI 26 IRQ_TYPE_LEVEL_HIGH>;
 			clocks = <&cpg CPG_MOD 817>;
 			resets = <&cpg 817>;
@@ -1683,7 +1683,7 @@
 
 		tisp1: tisp_01 {
 			compatible = "generic-uio";
-			reg = <0 0xfed20000 0 0x10000>;
+			reg = <0 0xfed20000 0 0x20000>;
 			interrupts = <GIC_SPI 27 IRQ_TYPE_LEVEL_HIGH>;
 			clocks = <&cpg CPG_MOD 814>;
 			resets = <&cpg 814>;
@@ -1693,7 +1693,7 @@
 
 		cisp1: cisp_01 {
 			compatible = "generic-uio";
-			reg = <0 0xfee00000 0 0x20000>;
+			reg = <0 0xfee00000 0 0x100000>;
 			interrupts = <GIC_SPI 109 IRQ_TYPE_LEVEL_HIGH>;
 			clocks = <&cpg CPG_MOD 814>;
 			resets = <&cpg 814>;
