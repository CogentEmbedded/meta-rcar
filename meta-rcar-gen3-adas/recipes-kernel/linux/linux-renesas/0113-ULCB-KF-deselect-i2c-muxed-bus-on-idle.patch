From 5d7283cbae265b56da321f698a0a34b5062f0e21 Mon Sep 17 00:00:00 2001
From: Andrey Gusakov <andrey.gusakov@cogentembedded.com>
Date: Wed, 13 Jun 2018 14:08:05 +0300
Subject: [PATCH 113/115] ULCB: KF: deselect i2c muxed bus on idle

Signed-off-by: Andrey Gusakov <andrey.gusakov@cogentembedded.com>
---
 arch/arm64/boot/dts/renesas/ulcb-kf.dtsi | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/arch/arm64/boot/dts/renesas/ulcb-kf.dtsi b/arch/arm64/boot/dts/renesas/ulcb-kf.dtsi
index a9c50d7..f051881 100644
--- a/arch/arm64/boot/dts/renesas/ulcb-kf.dtsi
+++ b/arch/arm64/boot/dts/renesas/ulcb-kf.dtsi
@@ -482,6 +482,7 @@
 		#size-cells = <0>;
 		reg = <0x71>;
 		reset-gpios = <&gpio5 3 GPIO_ACTIVE_LOW>;
+		i2c-mux-idle-disconnect;
 
 		i2c@0 {
 			#address-cells = <1>;
@@ -734,6 +735,7 @@
 		#size-cells = <0>;
 		reg = <0x71>;
 		reset-gpios= <&gpio3 15 GPIO_ACTIVE_LOW>;
+		i2c-mux-idle-disconnect;
 
 		i2c@0 {
 			#address-cells = <1>;
